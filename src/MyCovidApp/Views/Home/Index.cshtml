@model MyCovidApp.Models.RiskRequestModel

@{
    ViewData["Title"] = "MyCovid Risk Calculation";
}


<div class="text-center">
    <h2>Should you attend a social gathering?</h2>
    <p class="lead font-weight-light">Use the calculator below to estimate the probability that at least one person attending has COVID19.</p>
</div>
<form asp-controller="Home" asp-action="Risk" method="post" class="col-lg-6 offset-lg-3">
    <div class="row justify-content-md-center">
        <div class="form-group">
            <label for="positivityRate">Enter the expected positivity rate at location of gathering</label>
            <input asp-for="@Model.positivityRate" placeholder="2.0%" type="text" class="form-control" />
        </div>
    </div>
    <div class="row justify-content-md-center">
        <h3>OR</h3>
    </div>
    <div class="row justify-content-md-center">
        <div class="form-group mb-5">
            <label for="state">Select state where gathering will take place </label>
            <select asp-for="@Model.locationToSearch" asp-items="Model.ListOfStates" class="form-control"></select>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="form-group mb-5">
            <label for="numberAttendees">Enter number of people expected to attend</label>
            <input asp-for="@Model.numberOfPeople" type="text" class="form-control" placeholder="20" />
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary mb-5">
            Calculate risk
        </button>
    </div>
</form>
